#window groups
super + shift + {1, 2, 3, 4, 5, 6}
    groups.sh -s $(pfw) {1, 2, 3, 4, 5, 6}

super + {1, 2, 3, 4, 5, 6}
    groups.sh -t {1, 2, 3, 4, 5, 6}


