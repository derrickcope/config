#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvt 

# panel
 super + shift + Backspace
    pkill -x panel; bspc quit


# program launcher
super + space
	bashrun --toggle

# make sxhkd reload its configuration files:
super + shift + Return
	pkill -USR1 -x sxhkd; \
    notify-send "sxhkd config reloaded"

#
# bspwm hotkeys
#

# quit bspwm normally
#alt + shift + Backspace
#	bspc quit

# close and kill
alt + shift + Return
	bspc node -k

# alternate between the tiled and monocle layout
alt + shift + space
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
#super + y
#	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
#super + g
#	bspc node -s biggest

#
# state/flags
#

# set the window state
alt + {t,p,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {x,y,z}
#	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# change window focus on same desktop
alt + {_,shift + }{Left,Right,Up,Down}
    bspc node -{f,s} {west,east,north,south}.local

alt + {_,shift + }{h,l,k,j}
    bspc node -{f,s} {west,east,north,south}.local


# focus the node for the given path jump
#super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
alt + {Tab,Escape} 
    bspc node -f {next,prev}

# focus or send node to the next/previous desktop
ctrl + alt + {Left,Right}
	bspc monitor -f {prev,next}

ctrl + alt + {h,l}
    bspc monitor -f {prev,next}


alt + super + Right
    id=$(bspc query --nodes --node); \    
    bspc node -m next; \
    bspc monitor -f next; \
    bspc node -f ${id}


alt + super + Left
    id=$(bspc query --nodes --node); \ 
    bspc node -m prev; \
    bspc monitor -f prev; \
    bspc node -f ${id}

alt + super + l
    id=$(bspc query --nodes --node); \ 
    bspc node -m next; \
    bspc monitor -f next; \
    bspc node -f ${id}

alt + super + h
    id=$(bspc query --nodes --node); \ 
    bspc node -m prev;  \
    bspc monitor -f prev; \
    bspc node -f ${id}

# focus on next/prev desktop

super + {Tab,Escape}
    bspc desktop -f {next,prev}

super + {h,l}
    bspc desktop -f {prev,next}.local

super + {Left,Right}
    bspc desktop -f {prev,next}.local

super + shift + h
    id=$(bspc query --nodes --node); \
    bspc node -d prev.local; \
    bspc desktop -f prev.local; \
    bspc node -f ${id}

super + shift + l
    id=$(bspc query --nodes --node); \
    bspc node -d next.local; \
    bspc desktop -f next.local; \
    bspc node -f ${id}

super + shift + Left
    id=$(bspc query --nodes --node); \
    bspc node -d prev.local; \
    bspc desktop -f prev.local; \
    bspc node -f ${id}

super + shift + Right
    id=$(bspc query --nodes --node); \
    bspc node -d next.local; \
    bspc desktop -f next.local; \
    bspc node -f ${id}

super + {_,shift + }{1-8}
    bspc {desktop -f,node -d} '^{1-8}'



